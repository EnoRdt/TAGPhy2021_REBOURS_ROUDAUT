<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#B8A5D0">

    <TextView
        android:id="@+id/step1Q2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="60dp"
        android:text="@string/msg_age"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/Step1RgroupSexe"
        app:layout_constraintTop_toBottomOf="@+id/Step1RgroupSexe" />

    <Button
        android:id="@+id/step1BtnNext"
        android:layout_width="143dp"
        android:layout_height="52dp"
        android:layout_marginEnd="36dp"
        android:layout_marginBottom="44dp"
        android:text="@string/btn_next"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <Button
        android:id="@+id/step1BtnPrevious"
        android:layout_width="143dp"
        android:layout_height="52dp"
        android:layout_marginStart="36dp"
        android:layout_marginBottom="44dp"
        android:text="@string/btn_previous"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/step1BtnNext"
        app:layout_constraintHorizontal_bias="0.188"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/step1TitleProfile"
        android:layout_width="203dp"
        android:layout_height="65dp"
        android:layout_marginTop="72dp"
        android:layout_marginEnd="16dp"
        android:fontFamily="sans-serif-medium"
        android:text="@string/msg_monProfil"
        android:textColor="#FFFFFF"
        android:textSize="34sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toEndOf="@+id/step1ImgProfile"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/step1ImgProfile"
        android:layout_width="178dp"
        android:layout_height="123dp"
        android:layout_marginTop="16dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/monprofil" />

    <TextView
        android:id="@+id/step1Q1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="56dp"
        android:text="@string/msg_sexe"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.132"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/step1ImgProfile" />

    <RadioGroup
        android:id="@+id/Step1RgroupSexe"
        android:layout_width="219dp"
        android:layout_height="156dp"
        android:layout_marginTop="8dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/step1Q1"
        app:layout_constraintTop_toBottomOf="@+id/step1Q1">

        <RadioButton
            android:id="@+id/step1Q1RbtnH"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/choix_h" />

        <RadioButton
            android:id="@+id/step1Q1RbtnF"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/choix_f" />

        <RadioButton
            android:id="@+id/step1Q1RbtnO"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/choix_other" />
    </RadioGroup>

    <EditText
        android:id="@+id/Step1Q2EditAge"
        android:layout_width="229dp"
        android:layout_height="51dp"
        android:layout_marginTop="8dp"
        android:ems="10"
        android:inputType="number"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/step1Q2"
        app:layout_constraintTop_toBottomOf="@+id/step1Q2"
        tools:ignore="SpeakableTextPresentCheck" />

</androidx.constraintlayout.widget.ConstraintLayout>