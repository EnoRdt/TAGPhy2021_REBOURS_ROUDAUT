            android:textColor="#FFFFFF" />
    </RadioGroup>

    <TextView
        android:id="@+id/step2Q6Ask"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginTop="12dp"
        android:text="@string/step2Q6Ask"
        android:textAlignment="viewStart"
        android:textColor="#FFFFFF"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toEndOf="@+id/step2Q6"
        app:layout_constraintTop_toBottomOf="@+id/step2Q5RadioGroup"
        app:layout_constraintWidth_max="330dp" />

    <TextView
        android:id="@+id/step2Q5Ask"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginTop="12dp"
        android:text="@string/step2Q5Ask"
        android:textAlignment="viewStart"
        android:textColor="#FFFFFF"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toEndOf="@+id/step2Q5"
        app:layout_constraintTop_toBottomOf="@+id/step2Q4RadioGroup"
        app:layout_constraintWidth_max="330dp" />

    <RadioGroup
        android:id="@+id/step2Q6RadioGroup"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="@+id/step2Q3RadioGroup"
        app:layout_constraintEnd_toEndOf="@+id/step2Q6Ask"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/step2Q6Ask"
        app:layout_constraintTop_toBottomOf="@+id/step2Q6Ask"
        app:layout_constraintVertical_bias="1.0">

        <RadioButton
            android:id="@+id/step2Q6RbYes"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:buttonTint="#FFFFFF"
            android:text="@string/RbYes"
            android:textColor="#FFFFFF" />

        <RadioButton
            android:id="@+id/step2Q6RbNo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:buttonTint="#FFFFFF"
            android:text="@string/RbNo"
            android:textColor="#FFFFFF" />

        <RadioButton
            android:id="@+id/step2Q6RbIdk"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:buttonTint="#FFFFFF"
            android:text="@string/RbIdk"
            android:textColor="#FFFFFF" />
    </RadioGroup>

    <TextView
        android:id="@+id/step2Q6"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_marginTop="4dp"
        android:background="#FFFFFF"
        android:text="6"
        android:textAlignment="center"
        android:textColor="#E8426E"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="@+id/step2Q5"
        app:layout_constraintTop_toTopOf="@+id/step2Q6Ask" />

    <Button
        android:id="@+id/step2BtnPrevious"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="50dp"
        android:backgroundTint="#BEAEAEAE"
        android:onClick="previous"
        android:text="@string/BtnPrevious"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/step2Q6RadioGroup" />

    <Button
        android:id="@+id/step2BtnNext"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="50dp"
        android:backgroundTint="#BEAEAEAE"
        android:onClick="next"
        android:text="@string/BtnNext"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/step2Q6RadioGroup" />

</androidx.constraintlayout.widget.ConstraintLayout>