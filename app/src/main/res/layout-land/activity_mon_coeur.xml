            android:textColor="#FFFFFF" />

        <RadioButton
            android:id="@+id/step2Q5RbNo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:buttonTint="#FFFFFF"
            android:text="@string/RbNo"
            android:textColor="#FFFFFF" />

        <RadioButton
            android:id="@+id/step2Q5RbIdk"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:buttonTint="#FFFFFF"
