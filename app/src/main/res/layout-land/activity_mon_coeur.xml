<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#E8426E"
    tools:layout_editor_absoluteX="0dp"
    tools:layout_editor_absoluteY="-14dp">

    <ImageView
        android:id="@+id/step3Img"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/moncoeur" />

    <TextView
        android:id="@+id/step3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="@string/step2"
        android:textColor="#FFFFFF"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="@+id/step3Title"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/step3Title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/step2Title"
        android:textColor="#FFFFFF"
        android:textSize="28sp"
        app:layout_constraintBottom_toBottomOf="@+id/step3Img"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toEndOf="@+id/step3Img" />

    <TextView
        android:id="@+id/step2Q1"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_marginTop="-5dp"
        android:background="#FFFFFF"
        android:text="1"
        android:textAlignment="center"
        android:textColor="#E8426E"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="@+id/step3Img"
        app:layout_constraintTop_toTopOf="@+id/step2Q1Ask" />

    <TextView
        android:id="@+id/step2Q1Ask"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginTop="20dp"
        android:text="@string/step2Q1Ask"
        android:textAlignment="viewStart"
        android:textColor="#FFFFFF"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toEndOf="@+id/step2Q1"
        app:layout_constraintTop_toBottomOf="@+id/step3Title"
        app:layout_constraintWidth_max="240dp" />

    <RadioGroup
        android:id="@+id/step2Q1RadioGroup"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="@+id/step2Q1Ask"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/step2Q1Ask"
        app:layout_constraintTop_toBottomOf="@+id/step2Q1Ask">

        <RadioButton
            android:id="@+id/step2Q1RbYes"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="0"
            android:buttonTint="#FFFFFF"
            android:text="@string/RbYes"
            android:textColor="#FFFFFF" />

        <RadioButton
            android:id="@+id/step2Q1RbNo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:buttonTint="#FFFFFF"
            android:text="@string/RbNo"
            android:textColor="#FFFFFF" />

    </RadioGroup>

    <TextView
        android:id="@+id/step2Q2"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_marginTop="-5dp"
        android:background="#FFFFFF"
        android:text="2"
        android:textAlignment="center"
        android:textColor="#E8426E"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="@+id/step2Q1"
        app:layout_constraintTop_toTopOf="@+id/step2Q2Ask" />

    <TextView
        android:id="@+id/step2Q2Ask"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginTop="10dp"
        android:text="@string/step2Q2Ask"
        android:textAlignment="viewStart"
        android:textColor="#FFFFFF"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toEndOf="@+id/step2Q2"
        app:layout_constraintTop_toBottomOf="@+id/step2Q1RadioGroup"
        app:layout_constraintWidth_max="240dp" />

    <RadioGroup
        android:id="@+id/step2Q2RadioGroup"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="@+id/step2Q2Ask"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/step2Q2Ask"
        app:layout_constraintTop_toBottomOf="@+id/step2Q2Ask">

        <RadioButton
            android:id="@+id/step2Q2RbYes"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:buttonTint="#FFFFFF"
            android:text="@string/RbYes"
            android:textColor="#FFFFFF" />

        <RadioButton
            android:id="@+id/step2Q2RbNo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:buttonTint="#FFFFFF"
            android:text="@string/RbNo"
            android:textColor="#FFFFFF" />
    </RadioGroup>

    <TextView
        android:id="@+id/step2Q3"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_marginTop="-5dp"
        android:background="#FFFFFF"
        android:text="3"
        android:textAlignment="center"
        android:textColor="#E8426E"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="@+id/step2Q2"
        app:layout_constraintTop_toTopOf="@+id/step2Q3Ask" />

    <TextView
        android:id="@+id/step2Q3Ask"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginTop="10dp"
        android:text="@string/step2Q3Ask"
        android:textAlignment="viewStart"
        android:textColor="#FFFFFF"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toEndOf="@+id/step2Q3"
        app:layout_constraintTop_toBottomOf="@+id/step2Q2RadioGroup"
        app:layout_constraintWidth_max="240dp" />

    <RadioGroup
        android:id="@+id/step2Q3RadioGroup"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="@+id/step2Q3Ask"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/step2Q3Ask"
        app:layout_constraintTop_toBottomOf="@+id/step2Q3Ask">

        <RadioButton
            android:id="@+id/step2Q3RbYes"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:buttonTint="#FFFFFF"
            android:text="@string/RbYes"
            android:textColor="#FFFFFF" />

        <RadioButton
            android:id="@+id/step2Q3RbNo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:buttonTint="#FFFFFF"
            android:text="@string/RbNo"
            android:textColor="#FFFFFF" />
    </RadioGroup>

    <RadioGroup
        android:id="@+id/step2Q4RadioGroup"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="@+id/step2Q4Ask"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/step2Q4Ask"
        app:layout_constraintTop_toBottomOf="@+id/step2Q4Ask">

        <RadioButton
            android:id="@+id/step2Q4RbYes"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:buttonTint="#FFFFFF"
            android:text="@string/RbYes"
            android:textColor="#FFFFFF" />

        <RadioButton
            android:id="@+id/step2Q4RbNo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:buttonTint="#FFFFFF"
            android:text="@string/RbNo"
            android:textColor="#FFFFFF" />
    </RadioGroup>

    <TextView
        android:id="@+id/step2Q4Ask"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginTop="56dp"
        android:text="@string/step2Q4Ask"
        android:textAlignment="viewStart"
        android:textColor="#FFFFFF"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toEndOf="@+id/step2Q4"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintWidth_max="330dp" />

    <TextView
        android:id="@+id/step2Q4"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_marginStart="25dp"
        android:layout_marginTop="50dp"
        android:background="#FFFFFF"
        android:text="4"
        android:textAlignment="center"
        android:textColor="#E8426E"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintStart_toEndOf="@+id/step2Q1RadioGroup"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/step2Q5"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_marginTop="12dp"
        android:background="#FFFFFF"
        android:text="5"
        android:textAlignment="center"
        android:textColor="#E8426E"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="@+id/step2Q4"
        app:layout_constraintTop_toTopOf="@+id/step2Q5Ask" />

    <RadioGroup
        android:id="@+id/step2Q5RadioGroup"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
